{
    "extends": [
      "tslint:recommended",
      "tslint-eslint-rules"
    ],
    "rules": {
      "indent": [true, "spaces", 2],
      "semicolon": [true, "never"],
      "ordered-imports": false,
      "align": false,
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "array-type": false,
      "no-empty": false,
      "interface-name": false,
      "ban-types": true,
      "no-shadowed-variable": false,
      "object-literal-sort-keys": false,
      "radix": false,
      "no-console": false
    },
    "linterOptions": {
      "exclude": [
          "bin",
          "src/*.d.ts"
      ]
    }
  }  
